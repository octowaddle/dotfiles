# .config/sxhkd/sxhkdrc

# Launch terminal emulator
super + Return
    alacritty

# Launch web browser
super + w
    firefox

# Launch window opener
super + p
    rofi -show window

# Launch launcher
super + @space
    rofi -show drun

# Launch command launcher
super + c
    rofi -show run

# Make Sxhkd reload its configuration file
super + Escape
	pkill -USR1 -x sxhkd

# Swap the current node and the biggest node
super + s
	bspc node -s biggest.local

# Quit Bspwm
super + ctrl + q
    bspc quit

# Restart Bspwm
super + ctrl + r
    bspc wm -r

# Close window
super + q
    bspc node -c

# Set window state to tiled
super + t
    bspc node -t tiled

# Set window state to fullscreen
super + f
    bspc node -t fullscreen

# Focus window in given direction
super + {Up, Down, Left, Right}
    bspc node -f {north, south, west, east}

# Resize a window
super + shift + {Up, Down, Left, Right}
    ~/.config/bspwm/scripts/resize.sh {up,down,left,right} 100

# Fous the next or previous desktop
super + alt + {Left, Right}
    bspc desktop -f {prev, next}.local

# Focus the last desktop
super + Tab
    bspc desktop -f last

# Focus or send a window to the given desktop
super + {_, ctrl + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

# Raise volume
XF86AudioRaiseVolume
    pamixer --unmute --increase 5

# Lowe volume
XF86AudioLowerVolume
    pamixer --unmute --decrease 5

# Mute volume
XF86AudioMute
    pamixer --toggle-mute

# Play or pause media
XF86AudioPlay
    playerctl play-pause

# Play next media
XF86AudioNext
    playerctl next

# Play previous media
XF86AudioPrev
    playerctl previous

# Take screenshot
Print
   gnome-screenshot

super + s
    gnome-screenshot -a

# Brightness up
XF86MonBrightnessUp
    brightnessctl set +10%

# Brightness down
XF86MonBrightnessDown
    brightnessctl set 10%-
