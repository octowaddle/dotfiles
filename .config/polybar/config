[colors]
background = #CC212529
foreground = #f8f9fa
blue = #00bbf9
yellow = #fee440
green = #00f5d4
red = #f15bb5

[bar/main]
width = 100%:-32
fixed-center = true
padding = 1
height = 40
offset-x = 16
offset-y = 16
line-size = 2
line-color = ${colors.background}
font-0 = JetBrainsMono Nerd Font:size=14;4
locale = de_DE.UTF-8
module-margin = 0
modules-left = bspwm
modules-right = vol sep date sep time
background = ${colors.background}
foreground = ${colors.foreground}

[module/sep]
type = custom/text
content = " "

[module/bspwm]
type = internal/bspwm
label-focused = %index%
label-focused-foreground = ${colors.foreground}
label-focused-padding = 1
label-occupied = %index%
label-occupied-foreground = ${colors.blue}
label-occupied-padding = 1
label-urgent = %index%
label-urgent-foreground = ${colors.background}
label-urgent-background = ${colors.yellow}
label-urgent-padding = 1
label-empty = %index%
label-empty-padding = 1
label-empty-foreground = ${colors.blue}

[module/vol]
type = internal/pulseaudio
;master-mixer = Master
format-volume = " 墳 <label-volume>% "
format-muted-foreground = ${colors.green}
format-muted = " ﱝ  muted "
label-volume = %percentage%
label-muted = " Muted "
format-volume-foreground = ${colors.green}

[module/time]
type = internal/date
interval = 1
time = %H:%M
time-alt = %H:%M:%S
format-foreground = ${colors.yellow}
label = "  %time% "

[module/date]
type = internal/date
interval = 1
date = "%d.%m"
date-alt = "%d.%m.%Y"
format-foreground = ${colors.red}
label = "  %date% "
